<div data-controller="mods" class="container">
  <h1 class="mb-2 text-xl font-extrabold text-blue-700 no-underline md:mb-4 md:text-2xl lg:text-6xl dark:text-blue-500">Icarus Modding Tools</h1>
  <div class="flex flex-1">
    <div class="flex flex-wrap items-start justify-between flex-auto md:p-2 items-middle">
      <% @tools.each do |tool| %>
        <div id="<%= tool.slug %>" class="flex flex-col flex-auto w-1/3 p-2 m-2 border justify-evenly min-h-96 rounded-xl border-icarus-500 bg-slate-200 dark:bg-slate-800">
          <div id="<%= tool.slug %>-header" class="flex items-start justify-between flex-1">
            <div class="flex flex-col items-start flex-1">
              <div class="font-bold md:text-2xl text-icarus-500"><%= tool.name %></div>
              <div class="text-sm text-blue-400">by <%= tool.author %></div>
            </div>
            <div class="flex flex-col items-end flex-0">
              <button
                data-action="mods#download"
                data-mods-url-param="<%= raw_url(tool.url) %>"
                data-mods-file-name-param="<%= tool.filename %>"
                type="button"
                class="inline-flex items-center p-2 text-sm text-white bg-indigo-600 border border-transparent rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                DOWNLOAD
              </button>
              <div class="text-sm leading-6 text-slate-500 text">version <%= tool.version %></div>
            </div>
          </div>
          <div id="<%= tool.slug %>-body" class="prose dark:prose-invert lg:prose-xl"><%= markdown(tool.details) %></div>
          <div id="<%= tool.slug %>-footer" class="flex flex-col items-end text-sm">
            <div class="py-1 text-xs text-slate-500"><%= tool.updated_string %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
