<div data-controller="mods" class="flex-auto flex-col">
  <h1 class="text-blue-500">Mods</h1>
  <table class="table-auto">
    <thead>
      <tr>
        <th colspan="2"><a class="no-underline font-bold" href="<%= mods_path(sort: "name") %>">Name</a></th>
        <th class="invisible sm:visible">Version</th>
        <th><a class="no-underline font-bold" href="<%= mods_path(sort: "author") %>">Author</a></th>
        <th class="invisible lg:visible">Description</th>
      </tr>
    </thead>
    <tbody>
      <% @mods.each do |mod| %>
        <tr data-action="click->mods#navigateTo" data-mods-path-param="<%= mod_path(mod.id) %>" class="z-0 hover:bg-slate-200 dark:hover:bg-slate-700 cursor-pointer">
          <td><%= mod.name %></td>
          <td>
            <button
              data-action="mods#download"
              data-mods-url-param="<%= mod.url %>"
              data-mods-file-name-param="<%= mod.filename %>"
              type="button"
              class="z-10 inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-2 py-1 text-xs font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
              Download
            </button>
          </td>
          <td class="invisible sm:visible"><%= mod.version_string %></td>
          <td><%= mod.author %></td>
          <td class="invisible lg:visible"><%= mod.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
