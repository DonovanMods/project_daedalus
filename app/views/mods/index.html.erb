<div data-controller="mods" class="container">
  <div class="flex flex-1">
    <div class="flex justify-between flex-auto md:px-2 items-middle">
      <h1><%= link_to 'Icarus Mods', mods_path, class: "font-extrabold text-blue-700 no-underline dark:text-blue-500" %></h1>
      <%= form_with(url: mods_path, method: :get, data: {turbo_frame: "mods", turbo_action: "advance"}) do |form| %>
        <div class="flex space-x-3 items-bottom">
          <%= form.text_field :query, placeholder: "Start Typing to Search", data: {action: "input->mods#search"}, class: "py-2 px-2 md:mt-4 md:mr-2 text-slate-500 rounded border ring-0 focus:ring-4 focus:ring-blue-500 focus:shadow-none focus:border-blue-500 focus:outline-none" %>
        </div>
        <button type="button" class="button">
          <%= link_to "Show All Mods", mods_path, class: "text-blue-700 no-underline dark:text-blue-500 hover:text-blue-500 dark:hover:text-blue-300" %>
        </button>
      <% end %>
    </div>
  </div>
  <div class="text-icarus-500">Click on any row to view additional mod details</div>
  <%= render "mods", mods: @mods %>
</div>
