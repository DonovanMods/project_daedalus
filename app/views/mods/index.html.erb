<div data-controller="mods" class="container">
  <div class="md:flex md:flex-1">
    <div class="px-2 md:flex md:flex-auto md:items-middle md:justify-between">
      <h1 class="text-blue-500">Mods</h1>
      <%= form_with(url: mods_path, method: :get, data: {turbo_frame: "mods", turbo_action: "advance"}) do |form| %>
        <div class="flex items-bottom space-x-3">
          <%= form.text_field :query, placeholder: "Search", class: "py-1 px-3 text-slate-500 rounded border ring-0 focus:ring-4 focus:ring-blue-500 focus:shadow-none focus:border-blue-500 focus:outline-none" %>
          <%= form.submit 'Search', class: "py-1 px-3 font-medium bg-blue-500 text-slate-900 rounded flex items-center cursor-pointer hover:bg-blue-400 focus:ring-4 ring-0 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
  <% if @mods.nil? %>
    No Mods match your query, please try a different search
  <% else %>
    <%= render "mods", mods: @mods %>
  <% end %>
</div>
