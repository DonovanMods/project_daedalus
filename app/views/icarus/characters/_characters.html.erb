<%= turbo_frame_tag "characters" do %>
  <div class="flex flex-col flex-1 w-full">
    <table class="w-full mt-2 border-collapse table-auto lg:mt-4">
      <thead>
        <tr>
          <th class="p-2 text-left border-b border-slate-500">Name</th>
          <th class="p-2 text-right border-b border-slate-500 sm:table-cell">Level</th>
          <th class="hidden p-2 text-right border-b border-slate-500 sm:table-cell">XP</th>
          <th class="p-2 text-right border-b border-slate-500 sm:table-cell">Ren</th>
          <th class="p-2 text-right border-b border-slate-500 sm:table-cell">XM</th>
          <th class="hidden p-2 text-left border-b border-slate-500 md:table-cell">Location</th>
        </tr>
      </thead>
      <tbody>
        <% if characters.empty? %>
          <tr>
            <td colspan="6" class="py-8 text-xl text-center border-y border-slate-500 text-icarus-500">
              Please upload your Icarus Character and Profile data
            </td>
          </tr>
        <% else %>
          <%= render characters %>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
